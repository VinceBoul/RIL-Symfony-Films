{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body_content %}
    <h1>Movie index</h1>

    <div class="row">

        {% for movie in movies %}
            <div class="card col-md-3 my-3 px-0 mx-auto">
                <img src="https://image.tmdb.org/t/p/w500{{ movie.posterPath }}" class="card-img-top " alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ movie.title }}</h5>
                    <p class="card-text">{{ movie.overview|slice(0, 100) }}</p>
                    <p class="card-text"><small class="text-muted">{{ movie.releaseDate|date('d-m-Y') }}</small></p>
                    <p class="card-text"><p>Note : {{ movie.voteAverage }}</p>

                    <a class="btn-link" href="{{ path('movie_show', {'id': movie.id}) }}">show</a>
                </div>
            </div>
        {% endfor %}

    </div>

    <a href="{{ path('movie_new') }}">Create new</a>
{% endblock %}
